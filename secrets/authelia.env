# --- Authelia Core Secrets ---
# These are automatically generated
AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET=openssl rand -hex 32
AUTHELIA_SESSION_SECRET=openssl rand -hex 32
AUTHELIA_STORAGE_ENCRYPTION_KEY=openssl rand -hex 32

# --- OIDC Configuration ---
AUTHELIA_IDENTITY_PROVIDERS_OIDC_HMAC_SECRET=openssl rand -hex 32

# RSA Private Key for OIDC signing (JWKS)
AUTHELIA_IDENTITY_PROVIDERS_OIDC_JWKS_0_KEY=openssl genrsa 4096

# Immich OIDC Client Secret
# NOTE: Authelia v4.38+ requires client secrets to be HASHED in the config/env
# For now, we will provide a plain secret and see if Authelia accepts it via ENV 
# (Authelia usually supports plain text in ENV if not prefixed with {crypt})
AUTHELIA_IDENTITY_PROVIDERS_OIDC_CLIENTS_0_CLIENT_SECRET=openssl rand -hex 32

# --- Google Upstream (Manual Entry) ---
# Note: These names must match the Authelia configuration structure if auto-mapping
AUTHELIA_AUTHENTICATION_BACKEND_OIDC_GOOGLE_CLIENT_ID=prompt("Enter Google OAuth Client ID: ")
AUTHELIA_AUTHENTICATION_BACKEND_OIDC_GOOGLE_CLIENT_SECRET=prompt("Enter Google OAuth Client Secret: ")
